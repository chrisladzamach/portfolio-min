</svg>
`,
  LinkedIn: `<svg 
  width="24"  
  height="24"  
  viewBox="0 0 24 24"  
  fill="none"  
  stroke="currentColor"  
  stroke-width="2"  
  stroke-linecap="round"  
  stroke-linejoin="round"  
  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
  <path d="M8 11v5" />
  <path d="M8 8v.01" />
  <path d="M12 16v-5" />
  <path d="M16 16v-3a2 2 0 1 0 -4 0" />
  <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
</svg>`
}

const profilesInfo = profiles.map(({ network, url }) => {
  const icon = SOCIAL_ICONS[network]
  const firtsLetter = network[0].toUpperCase

  return {
    section: 'Social',
    title: network,
    url, 
    icon, 
    hotkey: `ctrl+${firtsLetter}`,
    handler: () => {
      window.open(url, '_blank')
    }
  }
})
---

<footer>
  Press <kbd>Cmd</kbd> + <kbd>K</kbd> to open the search command palette

</footer>

<ninja-keys placeholder="Type tour search" hideBreadcrums></ninja-keys>

<script>
  import "ninja-keys"

  const ninja = document.querySelector("ninja-keys")

  if(ninja !== null) {
    ninja.data = [
      {
        id: 'Print',
        title: 'Print',
        hotkey: 'ctrl+P',
        icon: `<svg style="margin-right: 8px" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0 1 10.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0 .229 2.523a1.125 1.125 0 0 1-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0 0 21 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 0 0-1.913-.247M6.34 18H5.25A2.25 2.25 0 0 1 3 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 0 1 1.913-.247m10.5 0a48.536 48.536 0 0 0-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5Zm-3 0h.008v.008H15V10.5Z" />
</svg>
`,
        section: 'actions',
        handler: () => {
          // it's auto register above hotkey with this handler
          // alert('Your logic to handle');
          window.print()
        },
      },
    ]
  }

</script>

<style>
  @media print {
    ninja-keys {
      display: none !important;
    }
  }

  footer {
    background: #ccc;
    border-top: 1px solid #eee;
    position: fixed;
    bottom: 0px;
    width: 100%;
    padding-block: 16px;
    text-align: center;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: .85rem;
  }

  kbd {
    background: #aaa;
    border-radius: 4px;
    padding: 2px 4px;
    font-size: 12px;
  }
</style>